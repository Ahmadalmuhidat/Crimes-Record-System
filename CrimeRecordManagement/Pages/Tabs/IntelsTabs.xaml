<UserControl x:Class="CrimeRecordManagement.Pages.Tabs.IntelsTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrimeRecordManagement.Pages.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="Intels" Height="600">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Intel ID"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding IntelID}"/>
                <DataGridTextColumn
                    Header="Content"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding IntelContent}"/>
                <DataGridTextColumn
                    Header="Creation Date"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding IntelCreationDate}"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
